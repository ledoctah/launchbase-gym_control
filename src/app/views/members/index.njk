{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <a href="/members/create">Novo</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Email</th>
                <th>Peso</th>
                <th>Altura</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
            <tr>
                <td>
                    <span style="background: url({{member.avatar_url}}) no-repeat center center / cover"></span>
                    {{member.name}}</td>
                <td>{{member.email}}</td>
                <td>{{member.weight}} kg</td>
                <td>{{member.height}} cm</td>
                <td><a href="/members/{{member.id}}">Ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock content %}
